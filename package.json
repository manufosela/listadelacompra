{
  "name": "myhomecart",
  "type": "module",
  "version": "1.6.11",
  "private": true,
  "scripts": {
    "generate:config": "node scripts/generate-firebase-config.js",
    "generate:version": "node scripts/generate-version.js",
    "bundle:lit": "node scripts/bundle-lit.js",
    "dev": "pnpm generate:config && pnpm generate:version && astro dev",
    "build": "pnpm generate:config && pnpm generate:version && pnpm bundle:lit && astro build",
    "preview": "astro preview",
    "start": "pnpm dev",
    "lint": "eslint src public",
    "lint:fix": "eslint src public --fix",
    "format": "prettier --write \"src/**/*.{astro,js,css}\" \"public/**/*.{js,css}\" --ignore-path .gitignore",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "node scripts/run-e2e-tests.js",
    "test:e2e:only": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:seed": "node scripts/seed-test-data.js",
    "firebase:emulators": "firebase emulators:start --import=./firebase-data --export-on-exit",
    "firebase:emulators:clean": "firebase emulators:start",
    "firebase:deploy": "firebase deploy",
    "deploy": "pnpm build && firebase deploy --only hosting",
    "commit": "node scripts/commit.js",
    "prepare": "husky"
  },
  "dependencies": {
    "astro": "^5.16.6",
    "dotenv": "^17.2.3",
    "firebase": "^12.7.0",
    "lit": "^3.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "firebase-admin": "^13.4.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@playwright/test": "^1.57.0",
    "@vitest/ui": "^4.0.16",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@10.26.2"
}
