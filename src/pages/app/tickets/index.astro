---
import AppLayout from '../../../layouts/AppLayout.astro';
---

<AppLayout title="Tickets">
  <div class="tickets-page">
    <header class="page-header">
      <div>
        <h1>Tickets</h1>
        <p>Historial de tickets escaneados</p>
      </div>
    </header>

    <div id="tickets-list" class="tickets-list">
      <p class="loading">Cargando tickets...</p>
    </div>
  </div>
</AppLayout>

<script type="module">
  import { isAuthResolved, getCurrentUser } from '/js/auth.js';
  import { db } from '/js/firebase-config.js';
  import { modal } from '/js/modal.js';
  import { collection, getDocs, query, orderBy, doc, deleteDoc } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-firestore.js';

  let currentUser = null;

  async function deleteTicket(userId, listId, ticketId) {
    const confirmed = await modal.confirm({
      title: 'Eliminar ticket',
      message: 'Â¿EstÃ¡s seguro de que quieres eliminar este ticket?',
      confirmText: 'Eliminar',
      cancelText: 'Cancelar',
      danger: true
    });

    if (!confirmed) return;

    try {
      const ticketRef = doc(db, 'users', userId, 'lists', listId, 'tickets', ticketId);
      await deleteDoc(ticketRef);
      initPage();
    } catch (error) {
      console.error('Error deleting ticket:', error);
    }
  }

  async function initPage() {
    const container = document.getElementById('tickets-list');
    if (!container) return;

    currentUser = getCurrentUser();
    if (!currentUser) {
      container.innerHTML = `
        <div class="empty-state">
          <p>Debes iniciar sesiÃ³n para ver los tickets.</p>
        </div>
      `;
      return;
    }

    try {
      // Obtener todas las listas del usuario
      const listsRef = collection(db, 'users', currentUser.uid, 'lists');
      const listsSnapshot = await getDocs(listsRef);

      // Obtener tickets de cada lista
      const allTickets = [];
      const listNames = {};

      for (const listDoc of listsSnapshot.docs) {
        const listData = listDoc.data();
        listNames[listDoc.id] = listData.name || 'Lista';

        const ticketsRef = collection(db, 'users', currentUser.uid, 'lists', listDoc.id, 'tickets');
        const ticketsQuery = query(ticketsRef, orderBy('processedAt', 'desc'));
        const ticketsSnapshot = await getDocs(ticketsQuery);

        ticketsSnapshot.docs.forEach(ticketDoc => {
          allTickets.push({
            id: ticketDoc.id,
            listId: listDoc.id,
            listName: listData.name || 'Lista',
            listIcon: listData.icon || 'ðŸ›’',
            ...ticketDoc.data()
          });
        });
      }

      // Ordenar todos los tickets por fecha
      allTickets.sort((a, b) => {
        const dateA = a.processedAt?.toDate?.() || new Date(0);
        const dateB = b.processedAt?.toDate?.() || new Date(0);
        return dateB - dateA;
      });

      if (allTickets.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <p>No hay tickets registrados.</p>
            <p class="hint">Escanea un ticket desde cualquier lista de compra.</p>
          </div>
        `;
        return;
      }

      container.innerHTML = allTickets.map(t => {
        const processedDate = t.processedAt?.toDate?.();
        const ticketDate = t.date || processedDate?.toLocaleDateString() || 'Fecha desconocida';

        return `
          <div class="ticket-card" data-ticket-id="${t.id}" data-list-id="${t.listId}">
            <a href="/app/list?id=${t.listId}" class="ticket-content">
              <div class="ticket-header">
                <div>
                  <h3>${t.store || 'Tienda desconocida'}</h3>
                  <span class="ticket-date">${ticketDate}</span>
                </div>
                <span class="ticket-total">${(t.total || 0).toFixed(2)}â‚¬</span>
              </div>
              <div class="ticket-meta">
                <span class="list-badge">${t.listIcon} ${t.listName}</span>
                <span class="items-badge">${t.itemCount || 0} productos</span>
              </div>
            </a>
            <button class="btn-delete-ticket" aria-label="Eliminar ticket" title="Eliminar ticket">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 6h18M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/>
              </svg>
            </button>
          </div>
        `;
      }).join('');

      // AÃ±adir event listeners para eliminar
      container.querySelectorAll('.btn-delete-ticket').forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          const card = btn.closest('.ticket-card');
          const ticketId = card.dataset.ticketId;
          const listId = card.dataset.listId;
          deleteTicket(currentUser.uid, listId, ticketId);
        });
      });
    } catch (error) {
      console.error('Error loading tickets:', error);
      container.innerHTML = '<p class="error">Error al cargar los tickets.</p>';
    }
  }

  function tryInit() {
    if (isAuthResolved()) {
      if (getCurrentUser()) initPage();
    } else {
      window.addEventListener('auth-ready', () => initPage(), { once: true });
    }
  }

  // Ejecutar en carga inicial
  tryInit();

  // Re-ejecutar en navegaciones con View Transitions
  document.addEventListener('astro:page-load', tryInit);
</script>

<style is:global>
  .tickets-page {
    max-width: 800px;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-xl);
  }

  .page-header h1 {
    margin-bottom: var(--space-xs);
  }

  .page-header p {
    color: var(--color-text-secondary);
  }

  .tickets-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .ticket-card {
    display: flex;
    align-items: stretch;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
    color: inherit;
    position: relative;
  }

  .ticket-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-sm);
  }

  .ticket-content {
    flex: 1;
    padding: var(--space-lg);
    text-decoration: none;
    color: inherit;
  }

  .btn-delete-ticket {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 var(--space-md);
    background: transparent;
    border: none;
    border-left: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .btn-delete-ticket:hover {
    background: var(--color-danger);
    color: white;
  }

  .ticket-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-md);
  }

  .ticket-header h3 {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-xs);
    color: var(--color-text);
  }

  .ticket-date {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .ticket-total {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-primary);
  }

  .ticket-meta {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .list-badge,
  .items-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-sm);
    background: #f0fdf4;
    color: #166534;
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  .items-badge {
    background: var(--color-bg-secondary);
    color: var(--color-text-secondary);
  }

  .empty-state {
    text-align: center;
    padding: var(--space-xl);
    color: var(--color-text-secondary);
  }

  .empty-state .hint {
    font-size: var(--font-size-sm);
    margin-top: var(--space-sm);
  }

  .loading,
  .error {
    text-align: center;
    padding: var(--space-xl);
    color: var(--color-text-secondary);
  }

  .error {
    color: var(--color-danger);
  }

  @media (prefers-color-scheme: dark) {
    .list-badge {
      background: #052e16;
      color: #86efac;
    }
  }
</style>
