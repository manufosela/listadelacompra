---
import AppLayout from '../../../layouts/AppLayout.astro';
---

<AppLayout title="Tickets">
  <div class="tickets-page">
    <header class="page-header">
      <div>
        <h1>Tickets</h1>
        <p>Historial de tickets escaneados</p>
      </div>
    </header>

    <div id="tickets-list" class="tickets-list">
      <p class="loading">Cargando tickets...</p>
    </div>
  </div>
</AppLayout>

<script type="module">
  import { isAuthResolved, getCurrentUser } from '/js/auth.js';
  import { db } from '/js/firebase-config.js';
  import { collection, getDocs, query, orderBy, collectionGroup } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-firestore.js';

  async function initPage() {
    const container = document.getElementById('tickets-list');
    if (!container) return;

    const user = getCurrentUser();
    if (!user) {
      container.innerHTML = `
        <div class="empty-state">
          <p>Debes iniciar sesi√≥n para ver los tickets.</p>
        </div>
      `;
      return;
    }

    try {
      // Obtener todas las listas del usuario
      const listsRef = collection(db, 'users', user.uid, 'lists');
      const listsSnapshot = await getDocs(listsRef);

      // Obtener tickets de cada lista
      const allTickets = [];
      const listNames = {};

      for (const listDoc of listsSnapshot.docs) {
        const listData = listDoc.data();
        listNames[listDoc.id] = listData.name || 'Lista';

        const ticketsRef = collection(db, 'users', user.uid, 'lists', listDoc.id, 'tickets');
        const ticketsQuery = query(ticketsRef, orderBy('processedAt', 'desc'));
        const ticketsSnapshot = await getDocs(ticketsQuery);

        ticketsSnapshot.docs.forEach(ticketDoc => {
          allTickets.push({
            id: ticketDoc.id,
            listId: listDoc.id,
            listName: listData.name || 'Lista',
            listIcon: listData.icon || 'üõí',
            ...ticketDoc.data()
          });
        });
      }

      // Ordenar todos los tickets por fecha
      allTickets.sort((a, b) => {
        const dateA = a.processedAt?.toDate?.() || new Date(0);
        const dateB = b.processedAt?.toDate?.() || new Date(0);
        return dateB - dateA;
      });

      if (allTickets.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <p>No hay tickets registrados.</p>
            <p class="hint">Escanea un ticket desde cualquier lista de compra.</p>
          </div>
        `;
        return;
      }

      container.innerHTML = allTickets.map(t => {
        const processedDate = t.processedAt?.toDate?.();
        const ticketDate = t.date || processedDate?.toLocaleDateString() || 'Fecha desconocida';

        return `
          <a href="/app/list?id=${t.listId}" class="ticket-card">
            <div class="ticket-header">
              <div>
                <h3>${t.store || 'Tienda desconocida'}</h3>
                <span class="ticket-date">${ticketDate}</span>
              </div>
              <span class="ticket-total">${(t.total || 0).toFixed(2)}‚Ç¨</span>
            </div>
            <div class="ticket-meta">
              <span class="list-badge">${t.listIcon} ${t.listName}</span>
              <span class="items-badge">${t.itemCount || 0} productos</span>
            </div>
          </a>
        `;
      }).join('');
    } catch (error) {
      console.error('Error loading tickets:', error);
      container.innerHTML = '<p class="error">Error al cargar los tickets.</p>';
    }
  }

  function tryInit() {
    if (isAuthResolved()) {
      if (getCurrentUser()) initPage();
    } else {
      window.addEventListener('auth-ready', () => initPage(), { once: true });
    }
  }

  // Ejecutar en carga inicial
  tryInit();

  // Re-ejecutar en navegaciones con View Transitions
  document.addEventListener('astro:page-load', tryInit);
</script>

<style is:global>
  .tickets-page {
    max-width: 800px;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-xl);
  }

  .page-header h1 {
    margin-bottom: var(--space-xs);
  }

  .page-header p {
    color: var(--color-text-secondary);
  }

  .tickets-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .ticket-card {
    display: block;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-lg);
    transition: all var(--transition-fast);
    text-decoration: none;
    color: inherit;
  }

  .ticket-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-sm);
  }

  .ticket-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-md);
  }

  .ticket-header h3 {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-xs);
    color: var(--color-text);
  }

  .ticket-date {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .ticket-total {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-primary);
  }

  .ticket-meta {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .list-badge,
  .items-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-sm);
    background: #f0fdf4;
    color: #166534;
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  .items-badge {
    background: var(--color-bg-secondary);
    color: var(--color-text-secondary);
  }

  .empty-state {
    text-align: center;
    padding: var(--space-xl);
    color: var(--color-text-secondary);
  }

  .empty-state .hint {
    font-size: var(--font-size-sm);
    margin-top: var(--space-sm);
  }

  .loading,
  .error {
    text-align: center;
    padding: var(--space-xl);
    color: var(--color-text-secondary);
  }

  .error {
    color: var(--color-danger);
  }

  @media (prefers-color-scheme: dark) {
    .list-badge {
      background: #052e16;
      color: #86efac;
    }
  }
</style>
