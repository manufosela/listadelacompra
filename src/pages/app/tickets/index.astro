---
import AppLayout from '../../../layouts/AppLayout.astro';
---

<AppLayout title="Tickets">
  <div class="tickets-page">
    <header class="page-header">
      <div>
        <h1>Tickets</h1>
        <p>Revisa tus tickets de compra</p>
      </div>
      <a href="/app/tickets/upload" class="btn btn-primary">+ Nuevo ticket</a>
    </header>

    <div id="tickets-list" class="tickets-list">
      <p class="loading">Cargando tickets...</p>
    </div>
  </div>
</AppLayout>

<script type="module">
  import { isAuthResolved, getCurrentUser } from '/js/auth.js';
  import { getCurrentGroupId, getGroup } from '/js/group.js';
  import { db } from '/js/firebase-config.js';
  import { collection, getDocs, query, orderBy } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-firestore.js';

  let members = {};

  async function initPage() {
    const container = document.getElementById('tickets-list');
    if (!container) return;

    const groupId = getCurrentGroupId();

    if (!groupId) {
      container.innerHTML = `
        <div class="empty-state">
          <p>No tienes ningún grupo configurado.</p>
          <a href="/app/groups" class="btn btn-primary">Crear o unirse a un grupo</a>
        </div>
      `;
      return;
    }

    try {
      // Cargar miembros del grupo
      const group = await getGroup(groupId);
      if (group?.members) {
        members = group.members;
      }

      const purchasesRef = collection(db, 'groups', groupId, 'purchases');
      const q = query(purchasesRef, orderBy('createdAt', 'desc'));
      const snapshot = await getDocs(q);

      if (snapshot.empty) {
        container.innerHTML = `
          <div class="empty-state">
            <p>No hay tickets registrados.</p>
            <a href="/app/tickets/upload" class="btn btn-primary">Escanear primer ticket</a>
          </div>
        `;
        return;
      }

      const purchases = snapshot.docs.map(doc => ({
        id: doc.id,
        ...doc.data(),
        date: doc.data().date?.toDate?.() || doc.data().createdAt?.toDate?.()
      }));

      container.innerHTML = purchases.map(p => {
        const paidByName = members[p.paidBy]?.displayName?.split(' ')[0] || 'Alguien';

        return `
          <div class="ticket-card">
            <div class="ticket-header">
              <div>
                <h3>${p.store || 'Tienda'}</h3>
                <span class="ticket-date">${p.date?.toLocaleDateString() || 'Fecha desconocida'}</span>
              </div>
              <span class="ticket-total">${(p.totalAmount || 0).toFixed(2)}€</span>
            </div>
            <div class="ticket-meta">
              <span class="paid-by-badge">Pagó ${paidByName}</span>
              ${p.listId ? '<span class="list-badge">Con lista</span>' : ''}
            </div>
            <div class="ticket-items">
              ${p.items?.slice(0, 3).map(item => `<span class="item-badge">${item.name}</span>`).join('') || ''}
              ${(p.items?.length || 0) > 3 ? `<span class="item-badge more">+${p.items.length - 3} más</span>` : ''}
            </div>
            ${p.debts && Object.keys(p.debts).length > 0 ? `
              <div class="ticket-debts">
                ${Object.entries(p.debts).map(([memberId, debt]) => {
                  const debtorName = members[memberId]?.displayName?.split(' ')[0] || 'Alguien';
                  return `<span class="debt-badge">${debtorName} debe ${debt.amount.toFixed(2)}€</span>`;
                }).join('')}
              </div>
            ` : ''}
          </div>
        `;
      }).join('');
    } catch (error) {
      console.error('Error loading tickets:', error);
      const container = document.getElementById('tickets-list');
      if (container) {
        container.innerHTML = '<p class="error">Error al cargar los tickets.</p>';
      }
    }
  }

  function tryInit() {
    if (isAuthResolved()) {
      if (getCurrentUser()) initPage();
    } else {
      window.addEventListener('auth-ready', () => initPage(), { once: true });
    }
  }

  // Ejecutar en carga inicial
  tryInit();

  // Re-ejecutar en navegaciones con View Transitions
  document.addEventListener('astro:page-load', tryInit);
</script>

<style>
  .tickets-page {
    max-width: 800px;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-xl);
  }

  .page-header h1 {
    margin-bottom: var(--space-xs);
  }

  .page-header p {
    color: var(--color-text-secondary);
  }

  .tickets-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .ticket-card {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--space-lg);
    transition: all var(--transition-fast);
  }

  .ticket-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-sm);
  }

  .ticket-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-md);
  }

  .ticket-header h3 {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-xs);
  }

  .ticket-date {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .ticket-total {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--color-primary);
  }

  .ticket-meta {
    display: flex;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .paid-by-badge,
  .list-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-sm);
    background: #eff6ff;
    color: #2563eb;
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  .list-badge {
    background: #f0fdf4;
    color: #166534;
  }

  .ticket-items {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .ticket-debts {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-top: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }

  .debt-badge {
    padding: var(--space-xs) var(--space-sm);
    background: #fef3c7;
    color: #92400e;
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  .item-badge {
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .item-badge.more {
    background: var(--color-bg-tertiary);
    color: var(--color-text-tertiary);
  }

  .empty-state {
    text-align: center;
    padding: var(--space-xl);
    color: var(--color-text-secondary);
  }

  .empty-state .btn {
    margin-top: var(--space-md);
  }

  .loading,
  .error {
    text-align: center;
    padding: var(--space-xl);
    color: var(--color-text-secondary);
  }

  .error {
    color: var(--color-danger);
  }
</style>
