---
import AppLayout from '../../layouts/AppLayout.astro';
---

<AppLayout title="Inicio">
  <div class="home-page">
    <div class="home-content">
      <h1 id="greeting">Hola</h1>
      <p class="welcome">Bienvenido a MyHomeCart</p>
      <p class="description">
        Tu aplicación para gestionar listas de la compra de forma colaborativa.
        Crea listas, compártelas con tu familia o compañeros de piso,
        escanea tickets para registrar gastos y lleva un control
        de los productos y precios de tu hogar.
      </p>
    </div>
  </div>
</AppLayout>

<script type="module">
  import { isAuthResolved, getCurrentUser } from '/js/auth.js';

  function initPage(user) {
    const greeting = document.getElementById('greeting');
    const displayName = user.displayName?.split(' ')[0] || 'Usuario';
    if (greeting) greeting.textContent = `Hola, ${displayName}`;
  }

  function tryInit() {
    if (isAuthResolved()) {
      const user = getCurrentUser();
      if (user) initPage(user);
    } else {
      window.addEventListener('auth-ready', (e) => initPage(e.detail.user), { once: true });
    }
  }

  tryInit();
  document.addEventListener('astro:page-load', tryInit);
</script>

<style is:global>
  .home-page {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 200px);
    padding: var(--space-lg);
  }

  .home-content {
    text-align: center;
    max-width: 500px;
  }

  .home-content h1 {
    font-size: 2rem;
    margin-bottom: var(--space-sm);
  }

  .home-content .welcome {
    font-size: var(--font-size-lg);
    color: var(--color-primary);
    margin-bottom: var(--space-xl);
  }

  .home-content .description {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
</style>
