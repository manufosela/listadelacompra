---
import AppLayout from '../../layouts/AppLayout.astro';
---

<AppLayout title="Inicio">
  <div class="home-page" style="display: flex; align-items: center; justify-content: center; min-height: calc(100vh - 200px); padding: 1rem;">
    <div class="home-content" style="text-align: center; max-width: 500px;">
      <h1 id="greeting" style="font-size: 2rem; margin-bottom: 0.5rem;">Hola</h1>
      <p class="welcome" style="font-size: 1.125rem; color: var(--color-primary); margin-bottom: 2rem;">Bienvenido a MyHomeCart</p>
      <p class="description" style="color: var(--color-text-secondary); line-height: 1.6;">
        Tu aplicacion para gestionar listas de la compra de forma colaborativa.
        Crea listas, compartelas con tu familia o companeros de piso,
        escanea tickets para registrar gastos y lleva un control
        de los productos y precios de tu hogar.
      </p>
    </div>
  </div>
</AppLayout>

<script type="module">
  import { isAuthResolved, getCurrentUser } from '/js/auth.js';

  function initPage(user) {
    const greeting = document.getElementById('greeting');
    const displayName = user.displayName?.split(' ')[0] || 'Usuario';
    if (greeting) greeting.textContent = `Hola, ${displayName}`;
  }

  function tryInit() {
    if (isAuthResolved()) {
      const user = getCurrentUser();
      if (user) initPage(user);
    } else {
      window.addEventListener('auth-ready', (e) => initPage(e.detail.user), { once: true });
    }
  }

  tryInit();
  document.addEventListener('astro:page-load', tryInit);
</script>
