---
import AppLayout from '../../../layouts/AppLayout.astro';
---

<AppLayout title="Mis Listas">
  <div class="lists-page">
    <header class="page-header">
      <div>
        <h1>Mis Listas</h1>
        <p>Gestiona tus listas de la compra</p>
      </div>
      <a href="/app/lists/new" class="btn btn-primary">+ Nueva lista</a>
    </header>

    <div class="lists-tabs">
      <button class="tab active" data-status="pending">Pendientes</button>
      <button class="tab" data-status="shopping">En curso</button>
      <button class="tab" data-status="completed">Completadas</button>
    </div>

    <div id="lists-container" class="lists-grid">
      <p class="loading">Cargando listas...</p>
    </div>
  </div>
</AppLayout>

<script type="module">
  import { isAuthResolved, getCurrentUser } from '/js/auth.js';
  import { subscribeToLists } from '/js/realtime-sync.js';
  import { getCurrentGroupId } from '/js/group.js';
  import { db } from '/js/firebase-config.js';
  import { doc, updateDoc, serverTimestamp } from 'https://www.gstatic.com/firebasejs/10.7.0/firebase-firestore.js';
  import { toast } from '/js/toast.js';

  let allLists = [];
  let activeStatus = 'pending';
  let unsubscribe = null;
  let currentUserId = null;

  function initPage() {
    const container = document.getElementById('lists-container');
    if (!container) return;

    const user = getCurrentUser();
    currentUserId = user?.uid;

    const groupId = getCurrentGroupId();
    if (!groupId) {
      container.innerHTML = `
        <div class="empty-state">
          <p>Primero necesitas crear o unirte a un grupo.</p>
          <a href="/app/groups" class="btn btn-primary">Configurar grupo</a>
        </div>
      `;
      return;
    }

    // Cancelar suscripci√≥n anterior si existe
    if (unsubscribe) {
      unsubscribe();
    }

    unsubscribe = subscribeToLists(groupId, (lists) => {
      allLists = lists;
      renderLists();
    });
  }

  // Comprobar estado de auth
  if (isAuthResolved()) {
    if (getCurrentUser()) initPage();
  } else {
    window.addEventListener('auth-ready', () => initPage(), { once: true });
  }

  document.addEventListener('astro:before-swap', () => {
    if (unsubscribe) {
      unsubscribe();
      unsubscribe = null;
    }
  });

  // Tabs
  const tabs = document.querySelectorAll('.tab');
  if (tabs.length > 0) {
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        activeStatus = tab.dataset.status;
        renderLists();
      });
    });
  }

  function renderLists() {
    const container = document.getElementById('lists-container');
    if (!container) return;

    const filtered = allLists.filter(l => l.status === activeStatus);

    if (filtered.length === 0) {
      container.innerHTML = `
        <div class="empty-state">
          <p>No hay listas ${activeStatus === 'pending' ? 'pendientes' : activeStatus === 'shopping' ? 'en curso' : 'completadas'}.</p>
        </div>
      `;
      return;
    }

    container.innerHTML = filtered.map(list => {
      const isOwner = list.ownerId === currentUserId || list.createdBy === currentUserId;
      const isAgnostic = list.listType === 'agnostic';
      const listIcon = list.iconUrl
        ? `<img src="${list.iconUrl}" alt="" class="list-icon-img" />`
        : `<span class="list-icon-emoji">${list.icon || 'üõí'}</span>`;

      return `
        <div class="list-card-wrapper">
          <a href="/app/list?id=${list.id}" class="list-card">
            <div class="list-card-header">
              <div class="list-title-row">
                ${listIcon}
                <h3>${list.name}</h3>
              </div>
              <span class="list-status ${list.status}">${list.status}</span>
            </div>
            ${list.store ? `<p class="list-store">üìç ${list.store}</p>` : ''}
            ${list.scheduledDate ? `<p class="list-date">üìÖ ${list.scheduledDate.toLocaleDateString()}</p>` : ''}
            ${list.isRecurring ? `<p class="list-recurring">üîÑ Recurrente</p>` : ''}
          </a>
          <div class="list-actions-group">
            ${!isAgnostic && !list.closed ? `
              <button class="list-action-btn scan-btn" data-list-id="${list.id}" data-owner-id="${list.ownerId || list.createdBy}" title="Escanear ticket" aria-label="Escanear ticket">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </button>
            ` : ''}
            ${isOwner ? `
              <a href="/app/lists/edit?id=${list.id}" class="list-action-btn" title="Editar lista" aria-label="Editar lista ${list.name}">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              </a>
              <button class="list-action-btn archive-btn ${list.closed ? 'active' : ''}" data-list-id="${list.id}" data-owner-id="${list.ownerId || list.createdBy}" data-closed="${list.closed || false}" title="${list.closed ? 'Reabrir lista' : 'Archivar lista'}" aria-label="${list.closed ? 'Reabrir lista' : 'Archivar lista'}">
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                </svg>
              </button>
            ` : ''}
          </div>
        </div>
      `;
    }).join('');

    // A√±adir event listeners para los botones de acci√≥n
    setupActionListeners();
  }

  function setupActionListeners() {
    // Botones de escanear ticket
    document.querySelectorAll('.scan-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const listId = btn.dataset.listId;
        const ownerId = btn.dataset.ownerId;
        // Navegar a la lista y abrir el scanner
        window.location.href = `/app/list?id=${listId}&owner=${ownerId}&openScanner=true`;
      });
    });

    // Botones de archivar
    document.querySelectorAll('.archive-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        e.preventDefault();
        e.stopPropagation();
        const listId = btn.dataset.listId;
        const ownerId = btn.dataset.ownerId;
        const isClosed = btn.dataset.closed === 'true';
        const newClosed = !isClosed;

        try {
          const listRef = doc(db, 'users', ownerId, 'lists', listId);
          await updateDoc(listRef, { closed: newClosed, updatedAt: serverTimestamp() });
          toast.success(newClosed ? 'Lista archivada' : 'Lista reabierta');
        } catch (error) {
          console.error('Error al archivar:', error);
          toast.error('Error al cambiar estado de la lista');
        }
      });
    });
  }
</script>

<style is:global>
  .lists-page {
    max-width: 1000px;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-xl);
  }

  .page-header h1 {
    margin-bottom: var(--space-xs);
  }

  .page-header p {
    color: var(--color-text-secondary);
  }

  .lists-tabs {
    display: flex;
    gap: var(--space-xs);
    margin-bottom: var(--space-lg);
    border-bottom: 1px solid var(--color-border);
    padding-bottom: var(--space-xs);
  }

  .tab {
    padding: var(--space-sm) var(--space-md);
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    font-weight: 500;
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .tab:hover {
    background: var(--color-bg-secondary);
  }

  .tab.active {
    background: var(--color-primary);
    color: white;
  }

  .lists-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-md);
  }

  .list-card-wrapper {
    position: relative;
  }

  .list-card {
    display: block;
    padding: var(--space-lg);
    padding-right: calc(var(--space-lg) + 110px);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-fast);
  }

  .list-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .list-actions-group {
    position: absolute;
    top: var(--space-sm);
    right: var(--space-sm);
    display: flex;
    gap: 4px;
    z-index: 1;
  }

  .list-action-btn {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .list-action-btn:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
  }

  .list-action-btn.active {
    background: var(--color-text-secondary);
    border-color: var(--color-text-secondary);
    color: white;
  }

  .list-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-sm);
  }

  .list-title-row {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .list-icon-emoji {
    font-size: 1.25rem;
    line-height: 1;
  }

  .list-icon-img {
    width: 24px;
    height: 24px;
    border-radius: var(--radius-sm);
    object-fit: cover;
  }

  .list-card-header h3 {
    font-size: var(--font-size-lg);
  }

  .list-status {
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .list-status.pending {
    background: #fef3c7;
    color: #92400e;
  }

  .list-status.shopping {
    background: #dbeafe;
    color: #1e40af;
  }

  .list-status.completed {
    background: #dcfce7;
    color: #166534;
  }

  .list-store,
  .list-date,
  .list-recurring {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin-top: var(--space-xs);
  }

  .empty-state {
    grid-column: 1 / -1;
    text-align: center;
    padding: var(--space-xl);
    color: var(--color-text-secondary);
  }

  .loading {
    grid-column: 1 / -1;
    text-align: center;
    padding: var(--space-xl);
    color: var(--color-text-secondary);
  }
</style>
