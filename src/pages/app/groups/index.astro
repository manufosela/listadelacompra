---
import AppLayout from '../../../layouts/AppLayout.astro';
---

<AppLayout title="Grupos">
  <div class="groups-page">
    <!-- Invitaciones pendientes -->
    <div id="pending-invitations" class="pending-invitations hidden"></div>

    <header class="page-header">
      <div class="header-content">
        <h1>Grupos</h1>
        <p class="header-subtitle">Gestiona tus grupos compartidos</p>
      </div>
      <button id="add-group-btn" class="btn btn-primary">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 5v14M5 12h14"/>
        </svg>
        Nuevo grupo
      </button>
    </header>

    <div id="groups-list" class="groups-list">
      <p class="loading-state">Cargando grupos...</p>
    </div>
  </div>

  <!-- Modal para nuevo grupo -->
  <dialog id="group-modal" class="modal">
    <div class="modal-content">
      <header class="modal-header">
        <h2>Crear grupo</h2>
        <button type="button" class="modal-close" id="cancel-create" aria-label="Cerrar">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 6L6 18M6 6l12 12"/>
          </svg>
        </button>
      </header>
      <form id="create-form">
        <div class="form-field">
          <label for="group-name">Nombre del grupo</label>
          <input
            type="text"
            id="group-name"
            placeholder="Ej: Familia García"
            autocomplete="off"
            required
          />
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary btn-full">Crear grupo</button>
        </div>
      </form>
    </div>
  </dialog>
</AppLayout>

<script type="module">
  import { isAuthResolved, getCurrentUser } from '/js/auth.js';
  import { toast } from '/js/toast.js';
  import {
    getUserGroups,
    getCurrentGroupId,
    setCurrentGroup,
    createGroup,
    getPendingInvitations,
    acceptInvitation,
    rejectInvitation
  } from '/js/group.js';

  let currentGroupId = null;
  let currentUser = null;

  async function loadPendingInvitations() {
    const container = document.getElementById('pending-invitations');
    if (!container) return;

    try {
      const invitations = await getPendingInvitations();

      if (invitations.length === 0) {
        container.classList.add('hidden');
        return;
      }

      container.classList.remove('hidden');
      container.innerHTML = `
        <div class="invitations-banner">
          <div class="banner-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
            </svg>
          </div>
          <div class="banner-content">
            <h2>Invitaciones pendientes</h2>
            <p class="banner-subtitle">${invitations.length} invitación${invitations.length !== 1 ? 'es' : ''} esperando tu respuesta</p>
          </div>
        </div>
        <div class="invitations-list">
          ${invitations.map(inv => `
            <div class="invitation-row" data-id="${inv.id}">
              <div class="invitation-info">
                <span class="invitation-group">${inv.groupName}</span>
                <span class="invitation-from">Invitado por ${inv.invitedByName}</span>
              </div>
              <div class="invitation-actions">
                <button class="btn btn-sm btn-ghost reject-btn" data-id="${inv.id}">Rechazar</button>
                <button class="btn btn-sm btn-primary accept-btn" data-id="${inv.id}">Aceptar</button>
              </div>
            </div>
          `).join('')}
        </div>
      `;

      // Event listeners
      container.querySelectorAll('.accept-btn').forEach(btn => {
        btn.addEventListener('click', async () => {
          const invId = btn.dataset.id;
          btn.disabled = true;
          btn.textContent = 'Aceptando...';
          try {
            const result = await acceptInvitation(invId);
            toast.success(`Te has unido a "${result.groupName}"`);
            loadPendingInvitations();
            loadGroups();
          } catch (error) {
            toast.error(error.message);
            btn.disabled = false;
            btn.textContent = 'Aceptar';
          }
        });
      });

      container.querySelectorAll('.reject-btn').forEach(btn => {
        btn.addEventListener('click', async () => {
          const invId = btn.dataset.id;
          btn.disabled = true;
          try {
            await rejectInvitation(invId);
            toast.success('Invitación rechazada');
            loadPendingInvitations();
          } catch (error) {
            toast.error(error.message);
            btn.disabled = false;
          }
        });
      });

    } catch (error) {
      console.error('Error loading invitations:', error);
    }
  }

  async function loadGroups() {
    const container = document.getElementById('groups-list');
    if (!container) return;

    currentGroupId = getCurrentGroupId();

    try {
      const groups = await getUserGroups();

      if (groups.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <div class="empty-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
            </div>
            <h3>Sin grupos</h3>
            <p>Crea un nuevo grupo o espera a recibir una invitación.</p>
          </div>
        `;
        return;
      }

      container.innerHTML = `
        <div class="groups-grid">
          ${groups.map(g => {
            const memberCount = Object.keys(g.members || {}).length;
            const isActive = g.id === currentGroupId;
            return `
              <article class="group-card ${isActive ? 'is-active' : ''}" data-id="${g.id}">
                <div class="group-card-main">
                  <div class="group-card-header">
                    <h3 class="group-name">${g.name}</h3>
                    ${isActive ? '<span class="status-dot" title="Grupo activo"></span>' : ''}
                  </div>
                  <p class="group-members">${memberCount} miembro${memberCount !== 1 ? 's' : ''}</p>
                </div>
                <div class="group-card-actions">
                  ${!isActive ? `<button class="btn btn-sm btn-ghost select-group-btn">Activar</button>` : ''}
                  <button class="btn btn-sm btn-ghost manage-btn">
                    Gestionar
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M9 18l6-6-6-6"/>
                    </svg>
                  </button>
                </div>
              </article>
            `;
          }).join('')}
        </div>
      `;

      // Event listeners para seleccionar grupo
      container.querySelectorAll('.select-group-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.stopPropagation();
          const card = e.target.closest('.group-card');
          const groupId = card.dataset.id;
          setCurrentGroup(groupId);
          toast.success('Grupo activado');
          loadGroups();
        });
      });

      // Event listeners para gestionar grupo
      container.querySelectorAll('.manage-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.stopPropagation();
          const card = e.target.closest('.group-card');
          const groupId = card.dataset.id;
          window.location.href = `/app/groups/manage?id=${groupId}`;
        });
      });
    } catch (error) {
      console.error('Error loading groups:', error);
      container.innerHTML = '<p class="error-state">Error al cargar los grupos.</p>';
    }
  }

  function tryInit() {
    if (isAuthResolved()) {
      currentUser = getCurrentUser();
      if (currentUser) {
        loadPendingInvitations();
        loadGroups();
      }
    } else {
      window.addEventListener('auth-ready', (e) => {
        currentUser = e.detail.user;
        if (currentUser) {
          loadPendingInvitations();
          loadGroups();
        }
      }, { once: true });
    }
  }

  // Ejecutar en carga inicial
  tryInit();

  // Re-ejecutar en navegaciones con View Transitions
  document.addEventListener('astro:page-load', tryInit);

  // Modal nuevo grupo
  const groupModal = document.getElementById('group-modal');
  const addGroupBtn = document.getElementById('add-group-btn');
  const createForm = document.getElementById('create-form');

  addGroupBtn?.addEventListener('click', () => groupModal?.showModal());
  document.getElementById('cancel-create')?.addEventListener('click', () => groupModal?.close());

  // Cerrar modal al hacer click en backdrop
  groupModal?.addEventListener('click', (e) => {
    if (e.target === groupModal) groupModal.close();
  });

  // Crear grupo
  createForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const name = document.getElementById('group-name')?.value;
    if (!name) return;

    const submitBtn = createForm.querySelector('button[type="submit"]');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Creando...';

    try {
      await createGroup(name);
      toast.success('Grupo creado');
      groupModal?.close();
      document.getElementById('group-name').value = '';
      loadGroups();
    } catch (error) {
      toast.error('Error: ' + error.message);
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Crear grupo';
    }
  });
</script>

<style is:global>
  /* ========================================
     PAGE LAYOUT
     ======================================== */
  .groups-page {
    max-width: 640px;
    margin: 0 auto;
  }

  /* ========================================
     HEADER
     ======================================== */
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
  }

  .header-content h1 {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    letter-spacing: -0.025em;
    margin: 0 0 var(--space-xs) 0;
    color: var(--color-text);
  }

  .header-subtitle {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* ========================================
     INVITATIONS BANNER
     ======================================== */
  .pending-invitations.hidden {
    display: none;
  }

  .invitations-banner {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-lg);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-bottom: none;
    border-radius: var(--radius-md) var(--radius-md) 0 0;
  }

  .banner-icon {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    color: white;
    border-radius: var(--radius-md);
  }

  .banner-content h2 {
    font-size: var(--font-size-base);
    font-weight: 600;
    margin: 0 0 2px 0;
  }

  .banner-subtitle {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }

  .invitations-list {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 0 0 var(--radius-md) var(--radius-md);
    margin-bottom: var(--space-xl);
    overflow: hidden;
  }

  .invitation-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-lg);
  }

  .invitation-row:not(:last-child) {
    border-bottom: 1px solid var(--color-border);
  }

  .invitation-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
  }

  .invitation-group {
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text);
  }

  .invitation-from {
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
  }

  .invitation-actions {
    display: flex;
    gap: var(--space-sm);
    flex-shrink: 0;
  }

  /* ========================================
     GROUPS LIST
     ======================================== */
  .groups-list {
    min-height: 120px;
  }

  .groups-grid {
    display: flex;
    flex-direction: column;
    gap: 1px;
    background: var(--color-border);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .group-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-lg);
    background: var(--color-bg);
    transition: background var(--transition-fast);
  }

  .group-card:hover {
    background: var(--color-bg-secondary);
  }

  .group-card.is-active {
    background: rgba(37, 99, 235, 0.04);
  }

  .group-card-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .group-name {
    font-size: var(--font-size-sm);
    font-weight: 500;
    margin: 0;
    color: var(--color-text);
  }

  .status-dot {
    width: 8px;
    height: 8px;
    background: var(--color-primary);
    border-radius: 50%;
    flex-shrink: 0;
  }

  .group-members {
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    margin: 2px 0 0 0;
  }

  .group-card-actions {
    display: flex;
    gap: var(--space-xs);
    flex-shrink: 0;
  }

  /* ========================================
     EMPTY STATE
     ======================================== */
  .empty-state {
    text-align: center;
    padding: var(--space-2xl) var(--space-lg);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
  }

  .empty-icon {
    color: var(--color-text-tertiary);
    margin-bottom: var(--space-md);
  }

  .empty-state h3 {
    font-size: var(--font-size-base);
    font-weight: 500;
    margin: 0 0 var(--space-xs) 0;
  }

  .empty-state p {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* ========================================
     LOADING & ERROR STATES
     ======================================== */
  .loading-state,
  .error-state {
    text-align: center;
    padding: var(--space-2xl);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .error-state {
    color: var(--color-danger);
  }

  /* ========================================
     BUTTONS
     ======================================== */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);
    font-size: var(--font-size-sm);
    font-weight: 500;
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-fast);
    white-space: nowrap;
  }

  .btn-primary {
    background: var(--color-text);
    color: var(--color-bg);
  }

  .btn-primary:hover {
    background: var(--color-text-secondary);
  }

  .btn-primary:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .btn-ghost {
    background: transparent;
    color: var(--color-text-secondary);
  }

  .btn-ghost:hover {
    background: var(--color-bg-tertiary);
    color: var(--color-text);
  }

  .btn-sm {
    padding: 6px 10px;
    font-size: var(--font-size-xs);
  }

  .btn-full {
    width: 100%;
  }

  /* ========================================
     MODAL
     ======================================== */
  .modal {
    border: none;
    border-radius: var(--radius-lg);
    padding: 0;
    max-width: 400px;
    width: calc(100% - var(--space-xl));
    box-shadow: var(--shadow-lg);
  }

  .modal::backdrop {
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(4px);
  }

  .modal-content {
    padding: var(--space-lg);
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-lg);
  }

  .modal-header h2 {
    font-size: var(--font-size-lg);
    font-weight: 600;
    margin: 0;
  }

  .modal-close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border: none;
    background: transparent;
    border-radius: var(--radius-md);
    cursor: pointer;
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .modal-close:hover {
    background: var(--color-bg-secondary);
    color: var(--color-text);
  }

  .form-field {
    margin-bottom: var(--space-lg);
  }

  .form-field label {
    display: block;
    font-size: var(--font-size-sm);
    font-weight: 500;
    margin-bottom: var(--space-sm);
    color: var(--color-text);
  }

  .form-field input {
    width: 100%;
    padding: 10px var(--space-md);
    font-size: var(--font-size-sm);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-bg);
    color: var(--color-text);
    transition: border-color var(--transition-fast);
  }

  .form-field input:focus {
    outline: none;
    border-color: var(--color-text);
  }

  .form-field input::placeholder {
    color: var(--color-text-tertiary);
  }

  .modal-footer {
    padding-top: var(--space-sm);
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 480px) {
    .page-header {
      flex-direction: column;
      align-items: stretch;
    }

    .page-header .btn {
      justify-content: center;
    }

    .invitation-row {
      flex-direction: column;
      align-items: stretch;
      gap: var(--space-sm);
    }

    .invitation-actions {
      justify-content: flex-end;
    }

    .group-card {
      flex-direction: column;
      align-items: stretch;
      gap: var(--space-sm);
    }

    .group-card-actions {
      justify-content: flex-end;
    }
  }
</style>
