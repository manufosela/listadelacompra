---
import BaseLayout from '../layouts/BaseLayout.astro';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "MyHomeCart",
  "alternateName": ["Home Cart", "Shared Cart", "Family Shopping List"],
  "url": "https://myhomec.art",
  "description": "MyHomeCart es la aplicaci贸n perfecta para crear y compartir listas de la compra con tu familia. Sincronizaci贸n en tiempo real, listas compartidas y gesti贸n colaborativa del hogar.",
  "applicationCategory": "LifestyleApplication",
  "operatingSystem": "Web, iOS, Android",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "EUR"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "ratingCount": "150"
  },
  "featureList": [
    "Shared shopping lists",
    "Real-time sync",
    "Family collaboration",
    "Multiple lists support",
    "Group management"
  ],
  "screenshot": "https://myhomec.art/og-image.png",
  "author": {
    "@type": "Organization",
    "name": "MyHomeCart",
    "url": "https://myhomec.art"
  }
};
---

<BaseLayout
  title="Listas de la Compra Compartidas"
  description="MyHomeCart - Crea y comparte listas de la compra con tu familia. Shared cart, home cart y listas colaborativas sincronizadas en tiempo real."
>
  <!-- Structured Data JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <main class="landing">
    <div class="landing-logo">
      <svg viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="landingLogoGrad" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#3b82f6"/>
            <stop offset="100%" style="stop-color:#1d4ed8"/>
          </linearGradient>
        </defs>
        <rect width="64" height="64" rx="14" fill="url(#landingLogoGrad)"/>
        <g transform="translate(8, 8)">
          <path d="M4 10 L10 10 L13 18" stroke="#ffffff" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
          <path d="M24 12 L38 22 L10 22 Z" fill="#fbbf24"/>
          <path d="M24 8 L42 24 L40 24 L24 11 L8 24 L6 24 Z" fill="#ffffff"/>
          <path d="M10 24 L10 38 L38 38 L38 24 Z" fill="#ffffff"/>
          <rect x="20" y="28" width="8" height="10" rx="1" fill="#3b82f6"/>
          <circle cx="26" cy="33" r="1" fill="#1d4ed8"/>
          <rect x="12" y="26" width="6" height="6" rx="1" fill="#bfdbfe"/>
          <rect x="30" y="26" width="6" height="6" rx="1" fill="#bfdbfe"/>
          <circle cx="16" cy="42" r="4" fill="#ffffff"/>
          <circle cx="32" cy="42" r="4" fill="#ffffff"/>
          <circle cx="16" cy="42" r="2" fill="#3b82f6"/>
          <circle cx="32" cy="42" r="2" fill="#3b82f6"/>
        </g>
      </svg>
    </div>
    <h1>MyHomeCart</h1>
    <p class="tagline">Tu lista de la compra familiar, sincronizada en tiempo real.</p>
    <a href="/login" class="btn btn-primary btn-lg">Comenzar</a>

    <!-- Features para SEO -->
    <section class="features" aria-label="Caracter铆sticas principales">
      <article class="feature">
        <span class="feature-icon"></span>
        <h2>Shared Cart</h2>
        <p>Comparte listas con tu familia y amigos en tiempo real</p>
      </article>
      <article class="feature">
        <span class="feature-icon"></span>
        <h2>Home Cart</h2>
        <p>Gestiona las compras del hogar de forma colaborativa</p>
      </article>
      <article class="feature">
        <span class="feature-icon"></span>
        <h2>Multiple Lists</h2>
        <p>Crea tantas listas como necesites para cada ocasi贸n</p>
      </article>
    </section>

    <span class="domain-badge">myhomec.art</span>
  </main>
</BaseLayout>

<style>
  .landing {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-xl);
    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #f0fdf4 100%);
  }

  .landing-logo {
    width: 120px;
    height: 120px;
    margin-bottom: var(--space-lg);
    animation: float 3s ease-in-out infinite;
  }

  .landing-logo svg {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 10px 30px rgba(59, 130, 246, 0.3));
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  h1 {
    font-size: 3rem;
    margin-bottom: var(--space-sm);
    background: linear-gradient(135deg, #1d4ed8 0%, #3b82f6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
    max-width: 400px;
  }

  .btn-lg {
    padding: var(--space-md) var(--space-2xl);
    font-size: var(--font-size-lg);
  }

  /* Features Section */
  .features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg);
    margin-top: var(--space-2xl);
    max-width: 800px;
    width: 100%;
  }

  .feature {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(59, 130, 246, 0.1);
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
  }

  .feature:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(59, 130, 246, 0.15);
  }

  .feature-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: var(--space-sm);
  }

  .feature h2 {
    font-size: var(--font-size-md);
    font-weight: 600;
    margin-bottom: var(--space-xs);
    color: var(--color-text);
  }

  .feature p {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  .domain-badge {
    margin-top: var(--space-2xl);
    padding: var(--space-xs) var(--space-md);
    background: rgba(59, 130, 246, 0.1);
    color: var(--color-primary);
    border-radius: var(--radius-full);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  @media (prefers-color-scheme: dark) {
    .landing {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f172a 100%);
    }

    .feature {
      background: rgba(30, 41, 59, 0.8);
      border-color: rgba(59, 130, 246, 0.2);
    }
  }

  @media (max-width: 600px) {
    .features {
      grid-template-columns: 1fr;
      padding: 0 var(--space-md);
    }
  }
</style>
