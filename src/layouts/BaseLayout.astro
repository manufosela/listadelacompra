---
import { ViewTransitions } from 'astro:transitions';
import { readFileSync, existsSync } from 'node:fs';

// Versión para cache busting de assets estáticos
const pkg = JSON.parse(readFileSync('package.json', 'utf-8'));
const APP_VERSION = pkg.version;

// Hash de build para cache busting más agresivo (cambia si cualquier JS/CSS cambia)
let BUILD_HASH = APP_VERSION;
if (existsSync('public/version.json')) {
  const versionData = JSON.parse(readFileSync('public/version.json', 'utf-8'));
  BUILD_HASH = versionData.hash || APP_VERSION;
}
const CACHE_BUSTER = `v=${APP_VERSION}&h=${BUILD_HASH}`;

const {
  title,
  description = 'MyHomeCart - Tu lista de la compra familiar colaborativa. Crea listas compartidas, sincroniza en tiempo real y gestiona las compras del hogar con tu familia.',
  image = '/og-image.png',
  type = 'website'
} = Astro.props;

const siteUrl = 'https://myhomec.art';
const fullTitle = `${title} | MyHomeCart`;
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const keywords = 'cart, lists, shared cart, home cart, lista de la compra, shopping list, family shopping, listas compartidas, compras del hogar, grocery list, collaborative shopping, carrito de compras, lista familiar';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <!-- Versión de la app para cache busting -->
    <meta name="app-version" content={APP_VERSION} />
    <meta name="build-hash" content={BUILD_HASH} />
    <script is:inline define:vars={{ APP_VERSION, BUILD_HASH, CACHE_BUSTER }}>
      window.APP_VERSION = APP_VERSION;
      window.BUILD_HASH = BUILD_HASH;
      window.CACHE_BUSTER = CACHE_BUSTER;

      // Sistema agresivo de cache busting
      (function checkVersion() {
        const STORAGE_KEY = 'app_build_hash';
        const RELOAD_KEY = 'app_reload_pending';
        const storedHash = localStorage.getItem(STORAGE_KEY);

        // Función para limpiar todos los caches y recargar
        async function clearCachesAndReload() {
          // 1. Limpiar Cache API (usado por Service Workers y fetch)
          if ('caches' in window) {
            try {
              const cacheNames = await caches.keys();
              await Promise.all(cacheNames.map(name => caches.delete(name)));
            } catch (e) {
              console.warn('[VersionCheck] Error limpiando Cache API:', e);
            }
          }

          // 2. Desregistrar Service Workers si existen
          if ('serviceWorker' in navigator) {
            try {
              const registrations = await navigator.serviceWorker.getRegistrations();
              await Promise.all(registrations.map(r => r.unregister()));
            } catch (e) {
              console.warn('[VersionCheck] Error desregistrando SW:', e);
            }
          }

          // 3. Marcar que ya recargamos para evitar loop infinito
          localStorage.setItem(RELOAD_KEY, 'true');

          // 4. Forzar recarga navegando a URL con timestamp (bypasa cache de navegación)
          const url = new URL(window.location.href);
          url.searchParams.set('_refresh', Date.now().toString());
          window.location.replace(url.toString());
        }

        // Si venimos de un reload forzado, limpiar el flag y quitar el param de URL
        const reloadPending = localStorage.getItem(RELOAD_KEY);
        if (reloadPending) {
          localStorage.removeItem(RELOAD_KEY);
          // Limpiar el query param _refresh de la URL sin recargar
          const url = new URL(window.location.href);
          if (url.searchParams.has('_refresh')) {
            url.searchParams.delete('_refresh');
            history.replaceState(null, '', url.pathname + url.search + url.hash);
          }
          return;
        }

        // Si es la primera visita, guardar hash y continuar
        if (!storedHash) {
          localStorage.setItem(STORAGE_KEY, BUILD_HASH);
          return;
        }

        // Si el hash cambió, limpiar caches y recargar
        if (storedHash !== BUILD_HASH) {
          localStorage.setItem(STORAGE_KEY, BUILD_HASH);
          clearCachesAndReload();
          return;
        }

        // Verificar periódicamente con el servidor
        async function checkServerVersion() {
          try {
            const res = await fetch('/version.json?t=' + Date.now(), { cache: 'no-store' });
            if (!res.ok) return;
            const data = await res.json();
            if (data.hash && data.hash !== BUILD_HASH) {
              localStorage.setItem(STORAGE_KEY, data.hash);
              clearCachesAndReload();
            }
          } catch {
            // Ignorar errores de red
          }
        }

        // Verificar al volver a la pestaña
        document.addEventListener('visibilitychange', () => {
          if (document.visibilityState === 'visible') {
            checkServerVersion();
          }
        });

        // Verificar cada 5 minutos
        setInterval(checkServerVersion, 5 * 60 * 1000);
      })();
    </script>

    <!-- Script inline para evitar flash de tema incorrecto -->
    <script is:inline>
      (function() {
        function applyTheme() {
          const saved = localStorage.getItem('theme-preference');
          const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          if (saved === 'dark' || (!saved && prefersDark)) {
            document.documentElement.classList.add('dark');
          } else {
            document.documentElement.classList.remove('dark');
          }
        }
        // Aplicar en carga inicial
        applyTheme();
        // Re-aplicar después de navegaciones con View Transitions
        document.addEventListener('astro:after-swap', applyTheme);
      })();
    </script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO básico -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="MyHomeCart" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${image}`} />
    <meta property="og:site_name" content="MyHomeCart" />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}${image}`} />

    <!-- Favicon y iconos -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#3b82f6" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="MyHomeCart" />

    <!-- Preconnect para rendimiento -->
    <link rel="preconnect" href="https://www.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />

    <!-- CSS (con cache busting usando hash de build) -->
    <link rel="stylesheet" href={`/css/reset.css?${CACHE_BUSTER}`} />
    <link rel="stylesheet" href={`/css/variables.css?${CACHE_BUSTER}`} />
    <link rel="stylesheet" href={`/css/global.css?${CACHE_BUSTER}`} />
    <link rel="stylesheet" href={`/css/components.css?${CACHE_BUSTER}`} />

    <!-- Firebase -->
    <script type="module" src={`/js/firebase-config.js?${CACHE_BUSTER}`}></script>
    <!-- Sistema de temas -->
    <script type="module" src={`/js/theme.js?${CACHE_BUSTER}`}></script>

    <!-- View Transitions para navegación fluida tipo SPA -->
    <ViewTransitions />

    <style is:global>
      /* Animaciones de View Transitions */
      @keyframes fade-in {
        from { opacity: 0; }
        to { opacity: 1; }
      }

      @keyframes fade-out {
        from { opacity: 1; }
        to { opacity: 0; }
      }

      @keyframes slide-from-right {
        from { transform: translateX(30px); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
      }

      @keyframes slide-to-left {
        from { transform: translateX(0); opacity: 1; }
        to { transform: translateX(-30px); opacity: 0; }
      }

      ::view-transition-old(root) {
        animation: 150ms ease-out fade-out;
      }

      ::view-transition-new(root) {
        animation: 150ms ease-in fade-in;
      }

      /* Transición más suave para el contenido principal */
      .app-main {
        view-transition-name: main-content;
      }

      ::view-transition-old(main-content) {
        animation: 150ms ease-out slide-to-left;
      }

      ::view-transition-new(main-content) {
        animation: 150ms ease-in slide-from-right;
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
